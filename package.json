{
  "name": "slot_test_task",
  "version": "1.0.0",
  "description": "test task",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack -d && cp src/index.html dist/index.html && webpack-dev-server --open --inline --hot",
    "build:prod": "webpack -p && cp src/index.html dist/index.html && webpack-dev-server --inline --hot",
    "start": "npm run build",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "fix-lint": "./node_modules/.bin/tslint src/ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexandrTichon/Slot_test_task.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "test",
    "task"
  ],
  "author": "Alexandr Tichon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AlexandrTichon/Slot_test_task/issues"
  },
  "homepage": "https://github.com/AlexandrTichon/Slot_test_task#readme",
  "dependencies": {
    "webpack": "^4.30.0"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "husky": "^1.3.1",
    "ts-loader": "^5.3.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  }
}
